pipeline {
    agent any  // Utilise n'importe quel agent disponible

    environment {
        MAVEN_OPTS = '-Xmx1024m'
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-17'  // Chemin vers ton Java 17
        PATH = "${env.JAVA_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ZunabJbilou/TPJavaPipeLineZinebJbilou.git'
            }
        }

        stage('Build') {
            steps {
                echo "Compilation du projet avec Maven et Java 17..."
                bat 'mvn clean package -B'
            }
        }

        stage('Test') {
            steps {
                echo "Exécution des tests unitaires..."
                bat 'mvn test -B'
            }
        }

        stage('Archive') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                echo "Archivage des fichiers JAR..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Deploy') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                echo 'Déploiement optionnel (à personnaliser si nécessaire)'
            }
        }
    }

    post {
        success {
            echo "Pipeline terminé avec succès !"
        }
        failure {
            echo "Pipeline échoué !"
        }
        always {
            echo "Pipeline terminé"
        }
    }
}

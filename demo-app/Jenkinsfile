pipeline {
    agent any  // Utilise n'importe quel agent disponible

    environment {
        MAVEN_OPTS = '-Xmx1024m'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ZunabJbilou/TPJavaPipeLineZinebJbilou.git'
            }
        }

        stage('Build') {
            steps {
                echo "Compilation du projet avec Maven..."
                sh 'mvn clean package -B'
            }
        }

        stage('Test') {
            steps {
                echo "Exécution des tests unitaires..."
                sh 'mvn test -B'
            }
        }

        stage('Archive') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                echo "Archivage des fichiers JAR..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Deploy') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                echo 'Déploiement optionnel (à personnaliser si nécessaire)'
                // Ici tu peux ajouter un script de déploiement Linux si besoin
            }
        }
    }

    post {
        success {
            echo "Pipeline terminé avec succès !"
            script {
                try {
                    slackSend(
                        channel: '#devops',
                        color: 'good',
                        message: """
                            ✅ *Pipeline réussi - ${env.JOB_NAME}*
                            Build #${env.BUILD_NUMBER} terminé avec succès
                            Branche: ${env.BRANCH_NAME ?: 'main'}
                            Lien: ${env.BUILD_URL}
                        """
                    )
                } catch (Exception e) {
                    echo "Erreur lors de l'envoi de Slack: ${e.getMessage()}"
                }
            }
        }
        failure {
            echo "Pipeline échoué !"
            script {
                try {
                    slackSend(
                        channel: '#devops',
                        color: 'danger',
                        message: """
                            ❌ *Pipeline échoué - ${env.JOB_NAME}*
                            Build #${env.BUILD_NUMBER} a échoué
                            Branche: ${env.BRANCH_NAME ?: 'main'}
                            Lien: ${env.BUILD_URL}
                        """
                    )
                } catch (Exception e) {
                    echo "Erreur lors de l'envoi de Slack: ${e.getMessage()}"
                }
            }
        }
        always {
            echo "Pipeline terminé"
        }
    }
}
